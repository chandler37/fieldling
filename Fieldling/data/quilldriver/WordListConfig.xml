<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE qd-configuration SYSTEM "qd-configuration.dtd">
<qd-configuration>
		<parameters>
			<parameter name="qd.root.element" val="WORDLIST" type="text"/>
			<parameter name="qd.title" val="/WORDLIST/HEADER/TITLE"/>
			<parameter name="qd.mediaurl" val="/WORDLIST/HEADER/SOUNDFILE/@href"/>
			<parameter name="qd.timealignednodes" val="//*[@start and @end]"/>
			<parameter name="qd.nodebegins" val="@start"/>
			<parameter name="qd.nodeends" val="@end"/>
			<parameter name="qd.nearestplayableparent" val="ancestor-or-self::*[@start]"/>
		</parameters>
		<actions>
			<action-set name="View">
				<action name="Play/Pause" keystroke="control SPACE" node="." qd-command="playPause"/>
				<action name="Play Back" keystroke="control QUOTE" node="." qd-command="playBack"/>
				<action name="Play Next" keystroke="control shift DOWN" node="following::*[@start]" qd-command="playNode"/>
				<action name="Play Current" keystroke="control LEFT" node="ancestor-or-self::*[@start]" qd-command="playNode"/>
				<action name="Play End of Current" keystroke="control RIGHT" node="ancestor-or-self::*[@start]" qd-command="playEdge"/>
				<action name="Play Previous" keystroke="control shift UP" node="preceding::*[@start]" qd-command="playNode"/>
				<action name="Seek Start" keystroke="control L" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" qd-command="seekStart"/>
				<action name="Seek End" keystroke="control SEMICOLON" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" qd-command="seekEnd"/>
				<action name="Seek Next" keystroke="control DOWN" node="following::*[name()='TIB' or name()='ENG']"/>
				<action name="Seek Previous" keystroke="control UP" node="preceding::*[name()='TIB' or name()='ENG']"/>
			</action-set>
			<action-set name="Media">
				<action name="Fix Media" keystroke="control INSERT" node="ancestor-or-self::WORDLIST/HEADER/SOUNDFILE" xsl-task="fixMedia"/>
			</action-set>
			<action-set name="Time Code">
				<action name="Mark Start Time" keystroke="control COMMA" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="markStart"/>
				<action name="Mark Stop Time" keystroke="control PERIOD" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="markStop" qd-command="stopMedia"/>
				<action name="Mark Start and Stop" keystroke="control SLASH" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="qd.insertTimes"/>
				<action name="Zap Time Codes" keystroke="control shift SLASH" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="zapTimes"/>
				<action name="Increase Start Time" keystroke="control EQUALS" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="increaseStart"/>
				<action name="Rapid Increase Start" keystroke="alt control EQUALS" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="rapidIncreaseStart"/>
				<action name="Decrease Start Time" keystroke="control MINUS" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="decreaseStart"/>
				<action name="Rapid Decrease Start" keystroke="alt control MINUS" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="rapidDecreaseStart"/>
				<action name="Increase Stop Time" keystroke="control CLOSE_BRACKET" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="increaseStop"/>
				<action name="Rapid Increase Stop" keystroke="alt control CLOSE_BRACKET" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="rapidIncreaseStop"/>
				<action name="Decrease Stop Time" keystroke="control OPEN_BRACKET" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="decreaseStop"/>
				<action name="Rapid Decrease Stop" keystroke="alt control OPEN_BRACKET" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="rapidDecreaseStop"/>
			</action-set>
			<action-set name="Edit">
				<action name="Insert After" keystroke="control M" node="ancestor-or-self::WORD" xsl-task="insertAfter"/>
				<action name="Insert Before" keystroke="control B" node="ancestor-or-self::WORD" xsl-task="insertBefore"/>
				<action name="Delete Word" keystroke="control D" node="ancestor-or-self::WORD" xsl-task="removeNode"/>
			</action-set>
		</actions>
		<rendering-instructions>
			<tag name="WORDLIST">
				<attribute name="xml:lang" visible="false"/>
			</tag>
			<tag name="TITLE">
				<attribute name="xml:lang" visible="false"/>
			</tag>
			<tag name="TIB" tibetan="true">
				<attribute name="start" visible="false"/>
				<attribute name="end" visible="false"/>
			</tag>
			<tag name="ENG">
				<attribute name="start" visible="false"/>
				<attribute name="end" visible="false"/>
			</tag>
		</rendering-instructions>
</qd-configuration>
