<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE qd-configuration SYSTEM "qd-configuration.dtd">
<qd-configuration>
		<parameters>
			<parameter name="qd.root.element" val="WORDLIST" type="text"/>
			<parameter name="qd.title" val="/WORDLIST/HEADER/TITLE"/>
			<parameter name="qd.mediaurl" val="/WORDLIST/HEADER/SOUNDFILE/@href"/>
			<parameter name="qd.timealignednodes" val="//*[@start and @end]"/>
			<parameter name="qd.nodebegins" val="@start"/>
			<parameter name="qd.nodeends" val="@end"/>
			<parameter name="qd.nearestplayableparent" val="ancestor-or-self::*[@start]"/>
		</parameters>
		<actions>
			<action-set name="Navigate">
				<action name="PlayPause" keystroke="control SPACE" node="." qd-command="playPause"/>
				<action name="PlayBack" keystroke="control QUOTE" node="." qd-command="playBack"/>
				<action name="PlayNextLine" keystroke="control shift DOWN" node="following::*[@start]" qd-command="playNode"/>
				<action name="PlayCurrentLine" keystroke="control LEFT" node="ancestor-or-self::*[@start]" qd-command="playNode"/>
				<action name="PlayEndofCurrentLine" keystroke="control RIGHT" node="ancestor-or-self::*[@start]" qd-command="playEdge"/>
				<action name="PlayPreviousLine" keystroke="control shift UP" node="preceding::*[@start]" qd-command="playNode"/>
				<action name="SeekStart" keystroke="control L" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" qd-command="seekStart"/>
				<action name="SeekEnd" keystroke="control SEMICOLON" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" qd-command="seekEnd"/>
				<action name="SeekNext" keystroke="control DOWN" node="following::*[name()='TIB' or name()='ENG']"/>
				<action name="SeekPrevious" keystroke="control UP" node="preceding::*[name()='TIB' or name()='ENG']"/>
			</action-set>
			<action-set name="Media">
				<action name="FixMedia" keystroke="control INSERT" node="ancestor-or-self::WORDLIST/HEADER/SOUNDFILE" xsl-task="fixMedia"/>
			</action-set>
			<action-set name="TimeCode">
				<action name="MarkStartTime" keystroke="control COMMA" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="markStart"/>
				<action name="MarkStopTime" keystroke="control PERIOD" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="markStop" qd-command="stopMedia"/>
				<action name="MarkStartAndStop" keystroke="control SLASH" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="qd.insertTimes"/>
				<action name="ZapTimeCodes" keystroke="control shift SLASH" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="zapTimes"/>
				<action name="IncreaseStartTime" keystroke="control EQUALS" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="increaseStart"/>
				<action name="RapidIncreaseStart" keystroke="alt control EQUALS" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="rapidIncreaseStart"/>
				<action name="DecreaseStartTime" keystroke="control MINUS" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="decreaseStart"/>
				<action name="RapidDecreaseStart" keystroke="alt control MINUS" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="rapidDecreaseStart"/>
				<action name="IncreaseStopTime" keystroke="control CLOSE_BRACKET" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="increaseStop"/>
				<action name="RapidIncreaseStop" keystroke="alt control CLOSE_BRACKET" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="rapidIncreaseStop"/>
				<action name="DecreaseStopTime" keystroke="control OPEN_BRACKET" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="decreaseStop"/>
				<action name="RapidDecreaseStop" keystroke="alt control OPEN_BRACKET" node="ancestor-or-self::*[name()='TIB' or name()='ENG']" xsl-task="rapidDecreaseStop"/>
			</action-set>
			<action-set name="Edit">
				<action name="InsertAfter" keystroke="control M" node="ancestor-or-self::WORD" xsl-task="insertAfter"/>
				<action name="InsertBefore" keystroke="control B" node="ancestor-or-self::WORD" xsl-task="insertBefore"/>
				<action name="DeleteWord" keystroke="control D" node="ancestor-or-self::WORD" xsl-task="removeNode"/>
			</action-set>
		</actions>
		<rendering-instructions>
			<tag name="WORDLIST">
				<attribute name="xml:lang" visible="false"/>
			</tag>
			<tag name="TITLE">
				<attribute name="xml:lang" visible="false"/>
			</tag>
			<tag name="TIB" tibetan="true">
				<attribute name="start" visible="false"/>
				<attribute name="end" visible="false"/>
			</tag>
			<tag name="ENG">
				<attribute name="start" visible="false"/>
				<attribute name="end" visible="false"/>
			</tag>
		</rendering-instructions>
</qd-configuration>
