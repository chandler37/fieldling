<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE qd-configuration SYSTEM "qd-configuration.dtd">
<qd-configuration>
		<!-- parameters -->
		<parameters>
			<parameter name="qd.root.element" val="body" type="text"/>
		<!--	<parameter name="qd.title" val="/TEXT/HEADER/TITLE"/> -->
		<!--	<parameter name="qd.mediaurl" val="/LOG/HEADER/SOUNDFILE/@href"> -->
			<parameter name="qd.timealignednodes" val="//*[@t1]"/>
			<parameter name="qd.nodebegins" val="@t1"/>
			<parameter name="qd.nodeends" val="@t2"/>
			<parameter name="qd.nearestplayableparent" val="ancestor-or-self::*[@t1]"/>
		</parameters>
		
		<actions>
			<action-set name="Navigate">
				<action name="PlayPause" keystroke="control SLASH" node="." qd-command="playPause"/>
				<action name="PlayNextLine" keystroke="control shift DOWN" node="following::*[@t1]" qd-command="playNode"/>
				<action name="PlayCurrentLine" keystroke="control LEFT" node="ancestor-or-self::*[@t1]" qd-command="playNode"/>
				<action name="PlayPreviousLine" keystroke="control shift UP" node="preceding::*[@t1]" qd-command="playNode"/>
				<action name="GotoStart" keystroke="control L" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" qd-command="seekStart"/>
				<action name="GotoEnd" keystroke="control SEMICOLON" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" qd-command="seekEnd"/>
				<action name="Next" keystroke="control DOWN" node="following::*[name()='seg' or name()='NOTE']"/>
				<action name="Previous" keystroke="control UP" node="preceding::*[name()='seg' or name()='NOTE']"/>
				<action name="JumpAhead10Lines" keystroke="control PAGE_DOWN" node="following::seg[position()=10]"/>
				<action name="JumpBack10Lines" keystroke="control PAGE_UP" node="preceding::seg[position()=10]"/>
			</action-set>
			<action-set name="TimeCode">
				<action name="MarkStartTime" keystroke="control COMMA" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="markStart"/>
				<action name="MarkStopTime" keystroke="control PERIOD" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="markStop" qd-command="stopMedia"/>
				<action name="MarkStartAndStop" keystroke="control SLASH" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="qd.insertTimes"/>
				<action name="IncreaseStartTime" keystroke="control EQUALS" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="increaseStart"/>
				<action name="RapidIncreaseStart" keystroke="alt control EQUALS" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="increaseStart"/>
				<action name="DecreaseStartTime" keystroke="control MINUS" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="decreaseStart"/>
				<action name="RapidDecreaseStart" keystroke="alt control MINUS" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="decreaseStart"/>
				<action name="IncreaseStopTime" keystroke="control CLOSE_BRACKET" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="increaseStop"/>
				<action name="RapidIncreaseStop" keystroke="alt control CLOSE_BRACKET" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="increaseStop"/>
				<action name="DecreaseStopTime" keystroke="control OPEN_BRACKET" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="decreaseStop"/>
				<action name="RapidDecreaseStop" keystroke="alt control OPEN_BRACKET" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="decreaseStop"/>
			</action-set>
			<action-set name="Annotate">
				<action name="InsertGeneralNote" keystroke="alt N" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="insertGeneral"/>
				<action name="InsertLexicalNote" keystroke="alt L" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="insertLexical"/>
				<action name="InsertGrammaticalNote" keystroke="alt G" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="insertGrammatical"/>
				<action name="InsertPronunciationNote" keystroke="alt P" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="insertPronunciation"/>
				<action name="InsertInterpretiveNote" keystroke="alt I" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="insertInterpretive"/>
				<action name="InsertSociolinguisticNote" keystroke="alt S" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="insertSociolinguistic"/>
				<action name="InsertCulturalNote" keystroke="alt C" node="ancestor-or-self::*[name()='seg' or name()='NOTE']" xsl-task="insertCultural"/>
				<action name="DeleteNote" keystroke="alt D" node="ancestor-or-self::NOTE" xsl-task="removeNode"/>
			</action-set>
		</actions>
		<!-- rendering parameters for tags -->
		<rendering-instructions>
			<tag name="body" visible="false"/>
			<tagview name="TextandNotes" keystroke="F1">
				<tag name="seg" displayas="XPATH:@n" tibetan="true" editable="false">
					<attribute name="n" visible="false"/>
					<attribute name="type" visible="false"/>
					<attribute name="t1" visible="false"/>
				</tag>
				<tag name="NOTE" displayas="XPATH:@type">
					<attribute name="type" visible="false"/>
					<attribute name="t1" visible="false"/>
					<attribute name="t2" visible="false"/>
				</tag>
			</tagview>
			<tagview name="TextOnly" keystroke="F2">
				<tag name="seg" displayas="XPATH:@n" tibetan="true" editable="false">
					<attribute name="n" visible="false"/>
					<attribute name="type" visible="false"/>
					<attribute name="t1" visible="false"/>
				</tag>
				<tag name="NOTE" visible="false" visiblecontents="false"/>
			</tagview>
			<tagview name="NotesOnly" keystroke="F3">
				<tag name="seg" visible="false" visiblecontents="false"/>
				<tag name="NOTE" displayas="XPATH:@type">
					<attribute name="type" visible="false"/>
					<attribute name="t1" visible="false"/>
					<attribute name="t2" visible="false"/>
				</tag>
			</tagview>
		</rendering-instructions>
</qd-configuration>
